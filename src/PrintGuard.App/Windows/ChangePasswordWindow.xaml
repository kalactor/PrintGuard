<Window x:Class="PrintGuard.App.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change password"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Border Padding="18">
        <StackPanel Width="360">
            <TextBlock Text="Change admin password"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap" />

            <TextBlock Text="Current password" Margin="0,12,0,4" />
            <PasswordBox x:Name="CurrentPasswordInput" MinWidth="300" />

            <TextBlock Text="New password" Margin="0,10,0,4" />
            <PasswordBox x:Name="NewPasswordInput" MinWidth="300" />

            <TextBlock Text="Confirm new password" Margin="0,10,0,4" />
            <PasswordBox x:Name="ConfirmNewPasswordInput" MinWidth="300" />

            <TextBlock x:Name="ErrorText"
                       Margin="0,12,0,0"
                       Foreground="#B00020"
                       Visibility="Collapsed"
                       TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="CancelButton_Click" />
                <Button Content="Update" Width="90" IsDefault="True" Click="UpdateButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
