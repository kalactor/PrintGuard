<Window x:Class="PrintGuard.App.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Print Guard"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Border Padding="20">
        <StackPanel Width="320">
            <TextBlock Text="Print Guard"
                       FontSize="20"
                       FontWeight="SemiBold" />

            <TextBlock Margin="0,8,0,0"
                       Text="Windows print firewall app."
                       Foreground="#444"
                       TextWrapping="Wrap" />

            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Version" FontWeight="SemiBold" />
                <TextBlock x:Name="VersionText" Margin="0,4,0,0" />
            </StackPanel>

            <Separator Margin="0,12,0,12" />

            <TextBlock Text="Created by" FontWeight="SemiBold" />
            <TextBlock Text="Amit Kumar" Margin="0,4,0,0" />

            <TextBlock Margin="0,8,0,0">
                <Hyperlink NavigateUri="https://amityadav.in"
                           RequestNavigate="WebsiteLink_RequestNavigate">
                    amityadav.in
                </Hyperlink>
            </TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Close" Width="90" IsDefault="True" Click="CloseButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
