<Window x:Class="PrintGuard.App.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Print Guard Settings"
        Width="560"
        Height="730"
        MinWidth="520"
        MinHeight="620"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <CheckBox Content="Enable print protection"
                          IsChecked="{Binding IsProtectionEnabled}" />

                <CheckBox Margin="0,8,0,0"
                          Content="Protect all printers"
                          IsChecked="{Binding ProtectAllPrinters}" />

                <GroupBox Header="Protected printers" Margin="0,10,0,0">
                    <ListBox ItemsSource="{Binding Printers}" Height="140" IsEnabled="{Binding IsPrinterSelectionEnabled}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <GroupBox Header="Security" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Max password failures before lockout" />
                            <TextBox Grid.Column="1" Text="{Binding MaxFailedAttempts, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Lockout duration (seconds)" />
                            <TextBox Grid.Column="1" Text="{Binding LockoutSeconds, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <CheckBox Margin="0,10,0,0"
                                  Content="Cancel job after repeated wrong passwords"
                                  IsChecked="{Binding CancelJobAfterFailedUnlockAttempts}" />

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Failed attempts before cancel" />
                            <TextBox Grid.Column="1" Text="{Binding CancelJobFailedAttemptThreshold, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <Button x:Name="ChangePasswordButton"
                                Margin="0,12,0,0"
                                Width="150"
                                HorizontalAlignment="Left"
                                Content="Change password"
                                Click="ChangePasswordButton_Click" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Job handling" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Polling interval (ms, 300-800)" />
                            <TextBox Grid.Column="1" Text="{Binding PollingIntervalMs, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Prompt quick unlock minutes" />
                            <TextBox Grid.Column="1" Text="{Binding PromptUnlockMinutes, UpdateSourceTrigger=LostFocus}" />
                        </Grid>

                        <CheckBox Margin="0,10,0,0"
                                  Content="Fallback to cancel when pause fails"
                                  IsChecked="{Binding FallbackCancelWhenPauseFails}" />

                        <CheckBox Margin="0,8,0,0"
                                  Content="Reassert paused jobs on startup"
                                  IsChecked="{Binding ReassertPausedJobsOnStartup}" />

                        <CheckBox Margin="0,8,0,0"
                                  Content="Auto-cancel paused jobs"
                                  IsChecked="{Binding EnableAutoCancelPausedJobs}" />

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Auto-cancel after minutes" />
                            <TextBox Grid.Column="1" Text="{Binding AutoCancelMinutes, UpdateSourceTrigger=LostFocus}" />
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="General" Margin="0,10,0,0">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable on Windows startup" IsChecked="{Binding EnableStartup}" />
                        <CheckBox Margin="0,8,0,0" Content="Enable notifications" IsChecked="{Binding EnableNotifications}" />
                        <CheckBox Margin="0,8,0,0" Content="Enable panic hotkey" IsChecked="{Binding EnablePanicHotkey}" />

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="180" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Panic hotkey (example: Ctrl+Shift+F12)" />
                            <TextBox Grid.Column="1" Text="{Binding PanicHotkey, UpdateSourceTrigger=LostFocus}" />
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="About"
                    Width="90"
                    HorizontalAlignment="Left"
                    Click="AboutButton_Click" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="CancelButton_Click" />
                <Button Content="Save" Width="90" IsDefault="True" Click="SaveButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
