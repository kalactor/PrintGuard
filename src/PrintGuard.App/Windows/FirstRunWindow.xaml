<Window x:Class="PrintGuard.App.Windows.FirstRunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Guard Setup"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Border Padding="20">
        <StackPanel Width="340">
            <TextBlock Text="Set an admin password to protect printing."
                       FontWeight="SemiBold"
                       TextWrapping="Wrap" />
            <TextBlock Text="This password is hashed with PBKDF2 and stored locally in %AppData%\PrintGuard."
                       Margin="0,8,0,0"
                       Foreground="#444"
                       TextWrapping="Wrap" />

            <TextBlock Text="Password" Margin="0,14,0,4" />
            <PasswordBox x:Name="PasswordInput" MinWidth="280" />

            <TextBlock Text="Confirm password" Margin="0,10,0,4" />
            <PasswordBox x:Name="ConfirmPasswordInput" MinWidth="280" />

            <TextBlock x:Name="ErrorText"
                       Margin="0,12,0,0"
                       Foreground="#B00020"
                       Visibility="Collapsed"
                       TextWrapping="Wrap" />

            <StackPanel Margin="0,16,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Exit" Width="90" Margin="0,0,8,0" Click="CancelButton_Click" />
                <Button Content="Save" Width="90" IsDefault="True" Click="SaveButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
