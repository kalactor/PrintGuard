<Window x:Class="PrintGuard.App.Windows.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin authentication"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Border Padding="18">
        <StackPanel Width="340">
            <TextBlock Text="Enter admin password to continue."
                       FontWeight="SemiBold"
                       TextWrapping="Wrap" />

            <TextBlock x:Name="ActionText"
                       Margin="0,8,0,0"
                       Foreground="#444"
                       TextWrapping="Wrap" />

            <TextBlock Text="Password" Margin="0,12,0,4" />
            <PasswordBox x:Name="PasswordInput" MinWidth="300" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="CancelButton_Click" />
                <Button Content="Continue" Width="90" IsDefault="True" Click="ContinueButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
