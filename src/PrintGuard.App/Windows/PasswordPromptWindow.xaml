<Window x:Class="PrintGuard.App.Windows.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Printing blocked"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Border Padding="18">
        <StackPanel Width="360">
            <TextBlock Text="Print Guard blocked a print job. Enter password to continue."
                       FontWeight="SemiBold"
                       TextWrapping="Wrap" />
            <TextBlock x:Name="ModeText"
                       Margin="0,8,0,0"
                       Foreground="#444"
                       TextWrapping="Wrap"
                       Visibility="Collapsed" />

            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Printer" FontWeight="SemiBold" />
                <TextBlock x:Name="PrinterText" TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Margin="0,8,0,0">
                <TextBlock Text="Document" FontWeight="SemiBold" />
                <TextBlock x:Name="DocumentText" TextWrapping="Wrap" />
            </StackPanel>

            <TextBlock Text="Password" Margin="0,12,0,4" />
            <PasswordBox x:Name="PasswordInput" MinWidth="300" />

            <CheckBox x:Name="UnlockDurationCheckBox" Margin="0,10,0,0" />

            <TextBlock x:Name="ErrorText"
                       Margin="0,10,0,0"
                       Foreground="#B00020"
                       Visibility="Collapsed"
                       TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="CancelButton_Click" />
                <Button Content="Unlock" Width="90" IsDefault="True" Click="UnlockButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
