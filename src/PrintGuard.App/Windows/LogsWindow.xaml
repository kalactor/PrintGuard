<Window x:Class="PrintGuard.App.Windows.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Guard Logs"
        Width="760"
        Height="420"
        MinWidth="600"
        MinHeight="320"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Entries}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time (UTC)"
                                    Width="170"
                                    Binding="{Binding TimestampUtc, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                <DataGridTextColumn Header="Level" Width="100" Binding="{Binding Level}" />
                <DataGridTextColumn Header="Message" Width="*" Binding="{Binding Message}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
