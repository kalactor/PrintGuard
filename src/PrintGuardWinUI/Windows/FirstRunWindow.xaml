<Window
    x:Class="PrintGuardWinUI.Windows.FirstRunWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PrintGuard Setup">
    <Border Padding="18">
        <StackPanel>
            <TextBlock Text="Create an admin password to protect printing."
                       FontSize="18"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10" />
            <TextBlock Text="Password is stored locally as PBKDF2 hash + salt."
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10" />

            <TextBlock Text="Password" Margin="0,8,0,0" />
            <PasswordBox x:Name="PasswordInput" Margin="0,0,0,10" />

            <TextBlock Text="Confirm password" />
            <PasswordBox x:Name="ConfirmPasswordInput" Margin="0,0,0,10" />

            <TextBlock x:Name="ErrorText"
                       Foreground="Firebrick"
                       Visibility="Collapsed"
                       TextWrapping="Wrap" />

            <Grid Margin="0,12,0,0" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Exit" Click="ExitButton_Click" />
                <Button Grid.Column="2" Content="Save" Click="SaveButton_Click" />
            </Grid>
        </StackPanel>
    </Border>
</Window>
